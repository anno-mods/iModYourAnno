                    </Grid>
                </StackPanel>
            </Border> -->
        </StackPanel>

        <Grid Grid.Column="1"
              Grid.Row="1"
              Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border CornerRadius="3"
                    Background="{DynamicResource ComponentColorBrush}"
                    BorderThickness="0">
                <Grid VerticalAlignment="Center"
                      HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Style="{StaticResource IMYA_TEXT}"
                               Text="Active Installs"
                               Margin="5"
                               FontWeight="DemiBold">
                    </TextBlock>
                    <TextBlock Style="{StaticResource IMYA_TEXT}"
                               Text="{Binding Installer.RunningInstallations.Count}"
                               Margin="5"
                               FontWeight="DemiBold"
                               Grid.Column="1">
                    </TextBlock>
                </Grid>
            </Border>

            <ScrollViewer Grid.Column="2"
                          Grid.Row="2"
                          Style="{StaticResource IMYA_SCROLLVIEWER}"
                          CanContentScroll="True"
                          Margin="0,4,0,0">
                <ItemsControl ItemsSource="{Binding Installer.RunningInstallations, UpdateSourceTrigger=PropertyChanged}"
                              x:Name="RunningInstallationsDisplay">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,10"
                                    Background="{DynamicResource ComponentColorBrush}"
                                    MinHeight="80"
                                    CornerRadius="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Vertical"
                                                HorizontalAlignment="Center">
                                        <TextBlock Style="{StaticResource IMYA_TEXT}"
                                                   Text="{Binding HeaderText.Text, UpdateSourceTrigger=PropertyChanged}"
                                                   Margin="5"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center" />
                                        <TextBlock Style="{StaticResource IMYA_TEXT}"
                                                   Text="{Binding AdditionalText.Text, UpdateSourceTrigger=PropertyChanged}"
                                                   Margin="5"
                                                   HorizontalAlignment="Center" />
                                    </StackPanel>
                                    <ProgressBar Name="progress"
                                                 Margin="6,6"
                                                 Height="15"
                                                 Grid.Row="1"
                                                 Value="{Binding Progress, UpdateSourceTrigger=PropertyChanged}"
                                                 Minimum="0"
                                                 Maximum="1" />
                                    <TextBlock Style="{StaticResource IMYA_TEXT}"
                                               Text="{Binding Status.Localized.Text, UpdateSourceTrigger=PropertyChanged}"
                                               Margin="5"
                                               Grid.Row="2" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
